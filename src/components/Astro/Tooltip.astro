---
/**
 * @description Component for rendering accessible tooltips with optional neon styling.
 * @param {Props} props - Tooltip configuration
 * @example
 * ```astro
 * // Basic tooltip
 * <Tooltip
 *   triggerText="Hover me"
 *   tooltipText="Tooltip content"
 * />
 *
 * // With neon effect
 * <Tooltip
 *   triggerText="Glowing tooltip"
 *   tooltipText="Neon styled content"
 *   neonify={true}
 * />
 *
 * // Using slots for custom content
 * <Tooltip tooltipText="Custom tooltip">
 *   <span slot="trigger">
 *     Hover for info
 *   </span>
 *   <span slot="content">
 *     <em>Custom formatted</em> tooltip content
 *   </span>
 * </Tooltip>
 *
 * // With custom styling
 * <Tooltip
 *   triggerText="Styled tooltip"
 *   tooltipText="Custom styled tooltip"
 *   class="my-custom-tooltip"
 * />
 * ```
 *
 * @note
 * - Accessible with proper ARIA attributes
 * - Optional neon glow effect with theme colors
 * - Supports both text and custom slot content
 * - Responsive positioning with transform
 * - Smooth hover transitions
 * - Theme-based styling and borders
 * - Arrow indicator for better UX
 */

import type { AstroBuiltinAttributes } from "astro";

export interface Props {
	triggerText?: string;
	tooltipText?: string;
	neonify?: boolean | "true" | "false";
	class?: string | AstroBuiltinAttributes["class:list"];
}

const {
	triggerText,
	tooltipText,
	neonify = false,
	class: className
} = Astro.props;

const options = { "rounded-theme": true };
---

<span class="relative inline-block group hover:cursor-help">
	<span
		class:list={[{ neon: neonify }, className]}
		data-text={tooltipText}
		aria-label={tooltipText}
	>
		<slot name="trigger">{triggerText}</slot>
	</span>

	<span
		class:list={[
			"absolute z-10 text-sm tracking-wide hidden group-hover:block font-semibold font-mono py-2 px-4 bottom-[40px] left-1/2 transform -translate-x-1/2 mb-2 whitespace-nowrap shadow-sm",
			options,
			{
				"bg-theme-primary text-theme-primary text-base border-2 border-theme-accent shadow-theme-accent":
					neonify,
				"bg-slate-400 text-white border border-theme-primary shadow-theme-primary":
					!neonify,
			},
		]}
	>
		<slot name="content">{tooltipText}</slot>
		<span
			class:list={[
				"absolute bottom-[-8px] left-1/2 transform -translate-x-1/2 w-0 h-0",
				"border-l-[8px] border-l-transparent",
				"border-r-[8px] border-r-transparent",
				{
					"border-t-[8px] border-t-theme-accent": neonify,
					"border-t-[8px] border-t-[#747474]": !neonify,
				},
			]}></span>
	</span>
</span>
